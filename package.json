{
  "name": "jamessteinbach",
  "version": "1.0.0",
  "description": "Build process for CV site",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-sass": "compass watch --time",
    "watch-js": "watchify src/main.js -o js/main.js -dv",
    "watch": "npm run watch-sass & npm run watch-js",
    "build-js": "browserify src/main.js | uglifyjs -mc > js/main.js",
    "build-sass": "compass compile --output-style compressed --force",
    "build": "npm run build-sass & npm run build-js",
    "run-nodesass": "./bin/build-css",
    "watch-nodesass": "nodemon -e scss -x \"npm run run-nodesass\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jdsteinbach/jamessteinbach.git"
  },
  "author": "James Steinbach",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdsteinbach/jamessteinbach/issues"
  },
  "homepage": "https://github.com/jdsteinbach/jamessteinbach",
  "devDependencies": {
    "nodemon": "^1.3.7"
  }
}
